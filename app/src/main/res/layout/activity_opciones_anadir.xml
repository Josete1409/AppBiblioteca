<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#b5bb3ced"
    tools:context="com.example.jose_.appbiblioteca.ActivityOpcionesAnadir">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione la Opción"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/Titulo"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnSocio"
        android:text="Añadir Socio"
        android:layout_below="@+id/Titulo"
        android:layout_marginTop="80dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnLibro"
        android:text="Añadir Libro"
        android:layout_below="@+id/btnSocio"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnAutor"
        android:text="Añadir Autor"
        android:layout_below="@+id/btnLibro" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnEditorial"
        android:text="Añadir Editorial"
        android:layout_below="@+id/btnAutor" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPrestamo"
        android:text="Añadir Prestamo"
        android:layout_below="@+id/btnEditorial" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/unnamed1"
        android:id="@+id/btnInicio"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
