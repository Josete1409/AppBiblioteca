<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_autor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#b5bb3ced"
    tools:context="com.example.jose_.appbiblioteca.ActivityAutor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir Nuevo Autor"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/Titulo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:"
        android:textSize="20dp"
        android:id="@+id/tvNombre"
        android:textColor="#000000"
        android:layout_below="@+id/Titulo"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPoblacion"
        android:text="Población:"
        android:layout_below="@+id/tvNombre"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_marginTop="20dp"/>



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Añadir"
        android:textSize="20dp"
        android:id="@+id/btnAñadir"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tvPoblacion"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/unnamed"
        android:id="@+id/btnVolver"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/btnInicio" />

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/unnamed1"
        android:id="@+id/btnInicio"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="text"
        android:hint="Ej: Juan Gonzalez"
        android:id="@+id/txtNombre"
        android:background="#FFFFFF"
        android:layout_alignTop="@+id/tvNombre"
        android:layout_toRightOf="@+id/tvPoblacion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:inputType="text"
        android:hint="Ej: Madrid"
        android:id="@+id/txtPoblacion"
        android:background="#FFFFFF"
        android:layout_alignBottom="@+id/tvPoblacion"
        android:layout_alignLeft="@+id/btnAñadir"
        android:layout_alignStart="@+id/btnAñadir"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="15dp"/>

</RelativeLayout>
